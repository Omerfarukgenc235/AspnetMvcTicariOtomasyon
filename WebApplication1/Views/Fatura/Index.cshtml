@using WebApplication1.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
        <th></th>
    </tr>
    @foreach (var k in Model)
    {
    <tr>
        <td>@k.FaturaSeriNo @k.FaturaSıraNo</td>
        <td>@k.Tarih</td>
        <td>@k.Saat</td>
        <td>@k.Toplam ₺</td>
        <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-group" style="background-color:yellowgreen;color:black">Detaylar</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-group" style="background-color:orangered;color:black">Kalem</a></td>
    </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Fatura Ekle</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:aquamarine" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">JetFaruk Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                    <tr>
                        <td>@x.FaturaSeriNo</td>
                        <td>@x.FaturaSıraNo</td>
                        <td>@x.Toplam</td>
                    </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>